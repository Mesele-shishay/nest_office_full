# Database Configuration
# DATABASE_TYPE supports: postgres | mysql | mariadb
DATABASE_TYPE=postgres
DATABASE_HOST=127.0.0.1
# Default ports: postgres=5432, mysql/mariadb=3306
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=nest_office

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# Refresh token functionality disabled by default
# To enable refresh tokens, uncomment the line below and set REFRESH_TOKEN_ENABLED=true
# JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
REFRESH_TOKEN_ENABLED=false

# Application Configuration
NODE_ENV=development
PORT=3000

# SMTP Configuration (for email functionality)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_NAME=NestJS Office
SMTP_FROM_EMAIL=your-email@gmail.com

# Admin User Configuration (for seeding)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# Default User Password (used when no password is provided during user creation)
DEFAULT_USER_PASSWORD=DefaultPass123!


EXTERNAL_API_URL=https://your-external-api.com/api

# Location API Configuration (for country/state/city validation)
# Get your free API key from: https://countrystatecity.in/
COUNTRY_STATE_CITY_API_KEY=your-api-key-here

# Afro Messages SMS Configuration (for phone verification)
# Get your API key from: https://afromessage.com/
AFRO_MESSAGES_API_URL=https://api.afromessage.com/api/send
AFRO_MESSAGES_API_KEY=your-afro-messages-api-key-here
AFRO_MESSAGES_SENDER_NAME=YourAppName
